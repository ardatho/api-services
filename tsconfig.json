{
 "compilerOptions": {
   "module": "commonjs",
   "declaration": true,
   "noImplicitAny": false,
   "removeComments": true,
   "noLib": false,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "target": "es6",
   "sourceMap": true,
   "skipLibCheck": true,
   "lib": [
     "es6"
   ],
   "baseUrl": "./packages",
   "paths": {
    "@namespace/x-api-core/*": ["x-api-core/src/*"],
    "@namespace/entity-helpers/*": ["entity-helpers/src/*"],
    "@namespace/x-users/*": ["x-users/src/*"]
   }
 },
 "exclude": [
   "node_modules",
   "**/*.spec.ts",
   "../node_modules"
 ]
}